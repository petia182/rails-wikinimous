<div class="container">
<h2>Edit the article below:</h2>

<%= form_for(@article) do |f| %>
<p>
  <h3><%= f.label :title %></h3>
  <%= f.text_field :title %>
</p>
<p>
  <h3><%= f.label :content %></h3>
  <%= f.text_area :content, size: "80x20" %>
</p>
  <%= f.submit :Update %>
<% end %>
</div>






